{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {},
  "scripts": {
    "test": "jest",
    "start": "webpack serve --mode development --open --hot --config ./webpack.config.ts",
    "build": "webpack --mode production --config ./webpack.config.ts",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "loki-update": "loki update",
    "loki-test": "loki test",
    "eslint": "eslint src/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/node-logger": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "@types/jest": "^25.2.3",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-loader": "8.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "26.6.0",
    "loki": "0.28.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3",
    "web-vitals": "^1.1.0",
    "webpack": "4.46.0",
    "webpack-cli": "4.5.0",
    "html-webpack-plugin": "4.5.2",
    "webpack-dev-server": "3.11.2",
    "lint-staged": "10.5.4",
    "husky": "5.1.3"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx}": [
      "prettier --write",
      "tslint src/"
    ],
    "*.{html,scss,css}": [
      "prettier --write"
    ]
  }
}
